#:set backcolor 0.2, 0.6, 1, 1
#:set buttoncolor 1, 1, 1, 1
#:set fontcolor 0, 0, 0, 1

#:set imagesize 350

<MyLayout>
    id: my_widget
    canvas.before:
        Color:
            rgba: backcolor
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        
        orientation: "vertical"
        size: root.width, root.height
        
        padding: 50
        spacing: 20


        Image:
            id: result_image
            color: backcolor
            source: ""
            
        Button:
            id: load_image
            text: 'Load Image'
            color: fontcolor
            background_normal: ''
            background_color: buttoncolor
            on_release: my_widget.show_load()
            

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)